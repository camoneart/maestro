{
  "name": "shadow-clone-jutsu",
  "version": "0.1.0",
  "description": "影分身の術(Git Worktree)で、Claude Codeとパラレル開発を実現するツール",
  "type": "module",
  "bin": {
    "scj": "./dist/cli.js",
    "shadow-clone-jutsu": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsup",
    "start": "node dist/cli.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prettier:check": "prettier --check 'src/**/*.ts'",
    "test": "vitest",
    "test:e2e": "npm run build && vitest run -c vitest.config.e2e.ts",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "update-homebrew-formula": "node scripts/update-homebrew-formula.js",
    "update-scoop-manifest": "node scripts/update-scoop-manifest.js",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "mcp",
    "claude",
    "development-tools"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.15.0",
    "@types/cli-progress": "3.11.6",
    "chalk": "5.4.1",
    "chokidar": "4.0.3",
    "cli-progress": "3.12.0",
    "commander": "14.0.0",
    "conf": "14.0.0",
    "execa": "9.6.0",
    "inquirer": "12.7.0",
    "open": "10.1.0",
    "ora": "8.2.0",
    "simple-git": "3.28.0",
    "zod": "4.0.2"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.5",
    "@eslint/js": "9.30.1",
    "@types/inquirer": "9.0.8",
    "@types/node": "22",
    "@typescript-eslint/eslint-plugin": "8.36.0",
    "@typescript-eslint/parser": "8.36.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.30.1",
    "eslint-config-prettier": "10.1.5",
    "prettier": "3.6.2",
    "tsup": "8.5.0",
    "tsx": "4.20.3",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  }
}
