{
  "name": "shadow-clone-jutsu",
  "version": "0.1.0",
  "description": "影分身の術(Git Worktree)で、Claude Codeとパラレル開発を実現するツール",
  "type": "module",
  "bin": {
    "scj": "./dist/cli.js",
    "shadow-clone-jutsu": "./dist/cli.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsup",
    "start": "node dist/cli.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "git",
    "worktree",
    "cli",
    "mcp",
    "claude",
    "development-tools"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "chalk": "^5.3.0",
    "commander": "14.0.0",
    "conf": "14.0.0",
    "execa": "^9.5.2",
    "inquirer": "^12.2.0",
    "ora": "^8.1.1",
    "simple-git": "^3.27.0",
    "zod": "4.0.2"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.8",
    "@types/node": "24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "10.1.5",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "3.2.4"
  }
}
